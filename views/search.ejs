<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-900 px-4 py-5">
  <div class="border-2 border-zinc-800 flex items-center justify-between px-2 py-1 rounded-md">
    <i class="text-white ri-search-line"></i>
    <input class="input ml-1 w-full bg-zinc-900 outline-none text-zinc-400" type="text" placeholder="search username">
  </div>
  <div class="users"></div>
</div>

<script>
  var inp = document.querySelector(".input")
  inp.addEventListener("input", function (e) {
    if (inp.value !== '') {
      fetch(`/search/${inp.value}`)
        .then(raw => raw.json())
        .then(result => {
          let clutter = "";
          if (result.length > 0) {
            result.forEach(element => {
              clutter += `<a href="/profile/${element._id}" class="outline-none">
                <div class="text-white flex items-center gap-2 mt-5">
                  <div class="image w-[11vw] h-[11vw] rounded-full bg-sky-100"></div>
                  <div class="text">
                    <h3>${element.username}</h3>
                    <h4 class="text-xs opacity-30 leading-none">${element.name}</h4>
                  </div>
                </div>            
              </a>`;
            });
          } else {
            // Handle the case when there are no search results
            clutter = "<p>No results found</p>";
          }

          // Append the generated HTML to the "users" div
          document.querySelector(".users").innerHTML = clutter;
        })
        .catch(error => console.error('Error fetching data:', error));
    } else {
      // Clear the "users" div if the input is empty
      document.querySelector(".users").innerHTML = "";
    }
  })
</script>
